<html lang="pt-BR">
    <head>
      <meta charset="UTF-8" />
      <meta http-equiv="X-UA-Compatible" content="IE=edge" />
      <meta name="viewport" content="width=device-width, initial-scale=1.0" />
      <title>Obra</title>
  
      <link rel="stylesheet" href="styles/main.css" />
      
    </head>
    <body>
        <%- include('parts/pageHeader') %>
        
        <br><hr><br>
        
        <% generoLiterario.forEach((generoLiterario) => { %>
            <a href="/lista_obra/genero/<%= generoLiterario.id %> "><%= generoLiterario.nome %> </a><br>
        <% })%>
        <table border="1">
          <tr>
              <td>Nome</td>
              <td>Autor</td>
              <td>Ação</td>
          </tr>
          <% obra.forEach((obra) => { %>
            <tr>
                <td><a href="/obra/<%=obra.id%>"><%= obra.nome %></a></td>
                <td><%= obra.autor %></td>
                <td>
                    <form action="/obra/delete/<%=obra.id%>" method="POST">
                        <input type="hidden" name="id"/> 
                        <button><img src="/images/icon_delet.png" class="icon" alt=""></button>
                    </form>

                    <form action="/obra/edit/<%=obra.id%>" method="POST">
                        <input type="hidden" name="id"/> 
                        <button><img src="/images/icon_edit.png" class="icon" alt=""></button>
                    </form>                    
                </td>
            </tr>
          <% })%>
        </table>      
    </body>